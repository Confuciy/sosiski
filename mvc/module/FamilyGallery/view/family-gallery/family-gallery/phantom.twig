{% extends 'family-gallery/layout/phantom.twig' %}

{% block logo_img %}{% endblock logo_img %}
{% block logo_title %}<span class="title">Family Gallery</span>{% endblock logo_title %}

{% block main_header %}{% endblock main_header %}

{% block tiles_section %}
    {% for member in members %}
        <article>
            <span class="image">
                {% if member.photo %}
                    <img src="/img/family-gallery-member/{{ member.photo }}" alt="" />
                {% else %}
                    <img src="/img/family-gallery-member/0.jpg" alt="" />
                {% endif %}
            </span>
            <a href="{{ url('family-gallery', {'action': 'view', 'member_id': member.id}) }}">
                <h2>{{ member.name }}</h2>
                <div class="content">
                    <p>{{ member.date|date('d.m.Y') }}</p>
                </div>
            </a>
        </article>
    {% endfor %}
{% endblock tiles_section %}

{% block menu_ul %}
    <ul>
        <li><a href="{{ url('family-gallery') }}">Home</a></li>
        {% for member in members %}
            <li><a href="{{ url('family-gallery', {'action': 'view', 'member_id': member.id}) }}">{{ member.name }}</a></li>
        {% endfor %}
    </ul>
{% endblock menu_ul %}

{% block footer %}{% endblock footer %}